<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>CRM Application</title>
  <script type="text/javascript">
    function enableButtons(buttonIds) {
        let buttonsIdList = buttonIds.split(",");
        buttonsIdList.forEach(element => {
            console.log(element);
            document.getElementById(element).removeAttribute('disabled');
        });
    }
</script>
</head>
<body>
  <h1>CRM Application</h1>

  <a href="/add"> Add Client </a>

  <form action="/search" method="post">
    
    <table>
        <tr>
            <td>
                <h2>Select Columns to Display</h2>
                <ul>
                    <% columnNames.forEach(item => { %>
                    <li>
                        <input type="checkbox" id="<%= item %>" name="<%= item %>" value="<%= item %>">
                        <label for="<%= item %>"> <%= item %></label>
                    </li>
                    <% }); %>
                </ul>
            </td>
        
            <td>
                <h2> Select RMs</h2>
                <ul>
                    <% rmNames.forEach(item => { %>
                    <li>
                        <input type="checkbox" id="<%= item %>" name="<%= item %>" value="<%= item %>">
                        <label for="<%= item %>"> <%= item %></label>
                        
                    <% }); %>
                </ul>
            </td>
        </tr>
        <tr>
            <td><button type"submit">Search</button></td>
        </tr>
    </table>
    
  </form>

  <br>
  <br>

  <!-- Printing the serach result box -->
  <% if(locals.searchHeaders) { %>
    <form action="/download" method="post">
        <button type"submit">Download Results</button>
    </form>
    <br>

    <table border="1">
        <tr>
            <% searchHeaders.forEach(item => { %>
            <td><b><%= item %></b></td>
            <% }); %>
        </tr>
        <% for (var i=0; i<searchResult.length; i++) { %>
            <tr>
                <% let enableIds = [] %>
                <% Object.keys(searchResult[i]).forEach(col => { %>

                    <% const obj = JSON.parse(schemaData[col])
                        let type = obj["type"]
                        let values = obj["values"]
                        let columnValue = searchResult[i][col];
                        enableIds.push(columnValue);
                    %>
                
                    <% if(type == "Dropdown") { %>
                        <td>
                            <select name="<%= columnValue %>" id="<%= columnValue %>" disabled>
                                <% values.forEach(item => { %>
                                    <% if(item == columnValue) { %>
                                        <option value="<%= item %>" selected><%= item %></option>
                                    <% } else { %>
                                        <option value="<%= item %>"><%= item %></option>
                                    <% } %>
                                <% }) %>
                            </select>
                        </td>
                    <% } else { %>
                        <td>
                            <input type="<%= type %>" id="<%= columnValue %>" name="<%= columnValue %>" value="<%= columnValue %>" disabled>
                        </td>
                    <% } %>
                <% }); %>  
                <td>
                    <button type="button" onclick="enableButtons('<%= enableIds %>');">Edit</button>
                </td>
            </tr>
        <% } %>
    </table>
  <% } %>
</body>
</html>
